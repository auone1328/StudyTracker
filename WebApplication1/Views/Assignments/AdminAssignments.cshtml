@using WebApplication1.Models.Entities
@using WebApplication1.Views.ViewModels
@using static WebApplication1.Models.Entities.StudentAssignment
@model AssignmentIndexViewModel
@{
    ViewData["Title"] = $"Задания курса";
}

<div class="container">
    <h2>@ViewData["Title"]</h2>
    <form asp-action="AdminAssignments" method="get" class="mb-4">
        <input type="hidden" name="courseId" value="@Model.CourseId" />

        <div class="row">
            <div class="col-md-4">
                <label>Сортировка по сроку:</label>
                <select name="sortOrder" class="form-control" asp-for="SortOrder">
                    <option value="">Без сортировки</option>
                    <option value="asc">Ближайшие сначала</option>
                    <option value="desc">Дальние сначала</option>
                </select>
            </div>
            <div class="col-md-4 d-flex align-items-end">
                <button type="submit" class="btn btn-primary me-2">Применить</button>
                <a asp-action="AdminAssignments" asp-route-courseId="@Model.CourseId"
                   class="btn btn-outline-secondary ml-2">Сбросить</a>
            </div>
        </div>
    </form>

    <table class="table table-striped table-bordered mt-4">
        <thead>
            <tr>
                <th>Задание</th>
                <th>Описание</th>
                <th>Срок сдачи</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Assignments)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.Description</td>
                    <td>@item.Deadline.ToString("dd.MM.yyyy")</td>
                    <td>
                        <a asp-action="Remove" asp-route-courseId="@item.CourseId" asp-route-assignmentId="@item.AssignmentId"
                                   class="btn btn-sm btn-outline-danger" title="Удалить задание">
                                    <i class="fa fa-trash" aria-hidden="true"></i>
                        </a>
                        <a asp-action="Update" asp-route-courseId="@item.CourseId" asp-route-assignmentId="@item.AssignmentId"
                           class="btn btn-sm btn-outline-warning" title="Редактировать задание">
                            <i class="fa fa-wrench" aria-hidden="true"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-controller="Courses" asp-action="Index"
       class="btn btn-secondary me-md-2">
        <i class="fas fa-arrow-left"></i> Назад
    </a>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <style>
        .table th, .table td {
            vertical-align: middle;
            text-align: center;
        }
        .badge {
            font-size: 0.9rem;
            padding: 0.35em 0.65em;
        }
    </style>
}
@using WebApplication1.Models.Entities
@using WebApplication1.Views.ViewModels
@using static WebApplication1.Models.Entities.StudentAssignment
@model AssignmentIndexViewModel
@{
    ViewData["Title"] = $"Задания курса";
    var statuses = new List<string>() {  "Не начато", "В работе", "Завершено"};
}

<div class="container">
    <h2>@ViewData["Title"]</h2>

    <form asp-action="Index" method="get" class="mb-4">
        <input type="hidden" name="courseId" value="@Model.CourseId" />

        <div class="row">
            <div class="col-md-4">
                <label>Статус:</label>
                <select name="status" class="form-control"
                        asp-for="SelectedStatus"
                        asp-items="Model.StatusOptions"></select>
            </div>
            <div class="col-md-4">
                <label>Сортировка по сроку:</label>
                <select name="sortOrder" class="form-control" asp-for="SortOrder">
                    <option value="">Без сортировки</option>
                    <option value="asc">Ближайшие сначала</option>
                    <option value="desc">Дальние сначала</option>
                </select>
            </div>
            <div class="col-md-4 d-flex align-items-end">
                <button type="submit" class="btn btn-primary me-2">Применить</button>
                <a asp-action="Index" asp-route-courseId="@Model.CourseId"
                   class="btn btn-outline-secondary ml-2">Сбросить</a>
            </div>
        </div>
    </form>

    <table class="table table-striped table-bordered mt-4">
        <thead>
            <tr>
                <th>Задание</th>
                <th>Описание</th>
                <th>Срок сдачи</th>
                <th>Статус</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.StudentAssignments)
            {
                <tr>
                    <td>@item.Assignment.Title</td>
                    <td>@item.Assignment.Description</td>
                    <td>@item.Assignment.Deadline.ToString("dd.MM.yyyy")</td>
                    <td>
                        @if (User.IsInRole("student"))
                        {
                            <form asp-controller="Assignments"
                                  asp-action="Index"
                                  method="post">
                                <input type="hidden" name="assignmentId" value="@item.AssignmentId" />
                                <input type="hidden" name="courseId" value="@item.Assignment.CourseId" />
                                <div class="input-group">
                                    <select name="status" class="form-control form-control-sm"
                                            onchange="this.form.submit()">
                                        @foreach (var status in Enum.GetValues(typeof(AssignmentStatus)))
                                        {
                                            <option value="@status" selected="@(item.Status == (AssignmentStatus)status)">
                                                @statuses[(int)status]
                                            </option>
                                        }
                                    </select>
                                </div>
                            </form>
                        }
                        
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="me-md-2 mt-3">
        <a asp-controller="Courses" asp-action="Index"
           class="btn btn-secondary me-md-2">
            <i class="fas fa-arrow-left"></i> Назад
        </a>
        <a asp-controller="Reports"
           asp-action="DownloadCourseAssignments"
           asp-route-courseId="@Model.CourseId"
           asp-route-format="xlsx"
           class="btn btn-success">
            <i class="fas fa-file-excel"></i> Выгрузить задания по курсу в Excel
        </a>
        <a asp-controller="Reports"
           asp-action="DownloadCourseAssignments"
           asp-route-courseId="@Model.CourseId"
           asp-route-format="docx"
           class="btn btn-primary">
            <i class="fas fa-file-word"></i> Выгрузить задания по курсу в Word
        </a>
    </div>    
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <style>
        .table th, .table td {
            vertical-align: middle;
            text-align: center;
        }
        .badge {
            font-size: 0.9rem;
            padding: 0.35em 0.65em;
        }
    </style>
}
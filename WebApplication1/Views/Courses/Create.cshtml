@using WebApplication1.Models.Entities
@model Course

<h2>Создать новый курс</h2>
<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Title">Название</label>
        <input asp-for="Title" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description">Описание</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label>Преподаватель</label>
        <select asp-for="TeacherId" class="form-control">
            @foreach (var teacher in ViewBag.Teachers)
            {
                <option value="@teacher.TeacherId">@teacher.TeacherLastName @teacher.TeacherFirstName</option>
            }
        </select>
    </div>
    <a asp-controller="Courses" asp-action="Index"
       class="btn btn-secondary me-md-2">
        <i class="fas fa-arrow-left"></i> Назад
    </a>
    <button type="submit" class="btn btn-primary m-2">Создать</button>
</form>
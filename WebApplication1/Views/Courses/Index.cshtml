@using WebApplication1.Models.Entities
@model IEnumerable<Course>

@{
    ViewData["Title"] = "Курсы";
}

<h2>Список курсов</h2>
@if (User.Identity.IsAuthenticated)
{
    @if (User.IsInRole("admin"))
    {
        <p>
            <a asp-action="Create" class="btn btn-success">
                <i class="fas fa-plus"></i> Создать новый курс
            </a>
        </p>
    }
    @if (Model.Count() == 0)
    {
        <h4>Курсы отсутствуют</h4>
    }
    else
    {
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>ID курса</th>
                    <th>Название</th>
                    <th>Описание</th>
                    <th>Преподаватель</th>
                    <th>Задания</th>
                    @if (User.IsInRole("admin"))
                    {
                        <th>Cтуденты</th>
                        <th>Действия</th>
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (var course in Model)
                {
                    <tr>
                        <td>@course.CourseId</td>
                        <td>@course.Title</td>
                        <td>@course.Description</td>
                        <td>@course.Teacher?.TeacherLastName @course.Teacher?.TeacherFirstName</td>
                        <td>
                            @if (course.Assignments.Any())
                            {
                                <span>@course.Assignments.Count</span>
                                <a asp-action="@(User.IsInRole("admin") ? "AdminAssignments" : "Index")" asp-controller="Assignments" asp-route-courseId="@course.CourseId"
                                   class="btn btn-sm btn-outline-success" title="Просмотреть задания">
                                    <i class="fa fa-eye"></i>
                                </a>
                            }
                            else
                            {
                                <span class="text-muted">Нет заданий</span>
                            }
                        </td>
                        @if (User.IsInRole("admin"))
                        {
                            <td>
                                @if (course.StudentsCourse.Any())
                                {
                                    <span>@course.StudentsCourse.Count</span>
                                }
                                else
                                {
                                    <span class="text-muted">Нет студентов</span>
                                }
                            </td>
                            <td>
                                <a asp-action="AssignStudents" asp-route-courseId="@course.CourseId"
                                   class="btn btn-sm btn-outline-primary" title="Назначить студентов">
                                    <i class="fas fa-user-graduate"></i>
                                </a>

                                <a asp-action="Create" asp-controller="Assignments" asp-route-courseId="@course.CourseId"
                                   class="btn btn-sm btn-outline-success" title="Добавить задание">
                                    <i class="fas fa-tasks"></i>
                                </a>
                                <a asp-action="Remove" asp-route-courseId="@course.CourseId"
                                   class="btn btn-sm btn-outline-danger" title="Удалить курс">
                                    <i class="fa fa-trash" aria-hidden="true"></i>
                                </a>
                                <a asp-action="Update" asp-route-courseId="@course.CourseId"
                                   class="btn btn-sm btn-outline-warning" title="Редактировать курс">
                                    <i class="fa fa-wrench" aria-hidden="true"></i>
                                </a>
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
        @if (User.IsInRole("admin"))
        {
            <div>
                <a asp-controller="Reports"
                   asp-action="DownloadOverdueAssignments"
                   asp-route-format="xlsx"
                   class="btn btn-success">
                    <i class="fas fa-file-excel"></i> Выгрузить просроченные задания в Excel
                </a>
                <a asp-controller="Reports"
                   asp-action="DownloadOverdueAssignments"
                   asp-route-format="docx"
                   class="btn btn-primary">
                    <i class="fas fa-file-word"></i> Выгрузить просроченные задания в Word
                </a>
            </div>
        }
    }
}
else
{
    <h4>Чтобы получить доступ к системе - авторизуйтесь.</h4>
}

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <style>
        .table th, .table td {
            vertical-align: middle;
            text-align: center;
        }
    </style>
}